<root>
	<styles>
		<include src="file://{resources}/styles/gamestyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
        <include src="file://{resources}/styles/popups/popup_capability_shared.css" />
		<include src="file://{resources}/styles/mainmenu.css" />
		<include src="file://{resources}/styles/popups/popup_tournament_journal.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/popups/popup_tournament_journal.js" />
        <include src="file://{resources}/scripts/generated/items_event_current_generated_store.js" />
		<include src="file://{resources}/scripts/common/iteminfo.js" />
	</scripts>

    <snippets>
        <snippet name="tournament-challenge" >
            <Button class="tournament-journal__challenge">
                <Label id="id-tournament-journal__challenge__name" class="tournament-journal__challenge__name stratum-font" text="#tournament_coin_desc"/>
                <Panel class="tournament-journal__challenge__icon-container">
                    <Image id="id-tournament-journal__challenge__icon" class="tournament-journal__challenge__icon" src="file://{images}/icons/ui/watch.svg" textureheight="28" texturewidth="-1"/>
                </Panel>
            </Button>
        </snippet>!
    </snippets>

	<PopupCustomLayout class="PopupPanel tournament-journal Hidden"
						useglobalcontext="true"
						popupbackground="blur"
						oncancel="TournamentJournal.ClosePopup();"
						onload="TournamentJournal.Init()">

		<Panel class="mainmenu-content__container mainmenu-content__container--inspect" useglobalcontext="true">
			<Panel id="id-tournament-journal-container" class="tournament-journal-container">
                <Panel id="id-tournament-journal-title-bar" class="tournament-journal__titlebar">
                    <Panel  class="top-bottom-flow vertical-center horizontal-center">
                        <Label id="id-tournament-journal-title" class="tournament-journal__titlebar__title stratum-font horizontal-center" text=""/>
                        <Label class="tournament-journal__titlebar__subtitle horizontal-center" text="#tournament_coin_desc"/>
                    </Panel>
                                                     
                </Panel>
                <Panel class="tournament-journal__section">
                    <Panel class="horizontal-center left-right-flow">
                                                
                        <Panel class="tournament-journal__column">
                            <Panel class="tournament-journal__info-block">
                                <Panel class="right-margin-medium" >
                                    <Image id="id-tournament-coin-levelbanner-bg" class="horizontal-center" src="file://{images}/icons/ui/banner-bg.svg" textureheight="98" texturewidth="-1"/>
                                    <Label class="tournament-journal__titlebar__title count stratum-font" text="{d:challenges_complete}"/>
                                </Panel>
        
                                <Panel class="top-bottom-flow vertical-center horizontal-center">
                                    <Label class="tournament-journal__info-block__title stratum-font" text="#tournament_coin_completed_challenges"/>
                                    <Label id="id-tournament-journal-remaining" class="tournament-journal__info-block__subtitle" html="true" text="#tournament_coin_remaining_challenges"/>
                                </Panel>
                            </Panel>
                                                       
                            <Panel id="id-tournament-journal__challenges-list" class="tournament-journal__challenges-list">
                                                                     
                            </Panel>
                        </Panel>
                                                  
                        <Panel class="tournament-journal__column">
                            <ItemPreviewPanel id="id-tournament-journal-model"
                                class="tournament-journal__model"
                                manifest="resource/ui/econ/ItemModelPanelCharWeaponInspect.res"
                                item="models/inventory_items/5_year_coin.mdl"
                                mouse_rotate="true"
                                sound="weapon"/>
                            <Panel class="tournament-journal__info-block">
                                <Panel class="right-margin-medium" >
                                    <Image id="id-tournament-ticket-icon" class="horizontal-center" src="file://{images}/icons/ui/ticket.svg" scaling='stretch-to-fit-y-preserve-aspect'/>
                                    <Label class="tournament-journal__titlebar__title count souvenir stratum-font" text="{d:redeems_remain}"/>
                                </Panel>

                                <Panel class="top-bottom-flow vertical-center horizontal-center">
                                    <Label class="tournament-journal__info-block__title stratum-font" text="#tournament_coin_earned_souvenir"/>
                                    <Label class="tournament-journal__info-block__subtitle" html="true" text="#tournament_coin_redeem_souvenir"/>
                                    <Button id="id-tournament-journal-redeem-btn" class="tournament-journal-button" onactivate="TournamentJournal.OnActivateRedeem();">
                                        <Label  id="" text="#tournament_coin_redeem_action"/>
                                    </Button>
                                </Panel>
                            </Panel>
                        </Panel>
                    </Panel>
                </Panel>

                                                                                                         
                                                                                              
                                                                                                                                                                                   
                                     
                                 
                <Panel class="tournament-journal__section tournament-journal__section--noborder">
                    <Panel class="horizontal-center left-right-flow">
                        <Panel class="tournament-journal__column short">
                            <Panel class="tournament-journal__info-block short">
                                <Panel class="right-margin-medium" >
                                    <ItemImage id="id-tournament-journal-spray" class="horizontal-center" src=""/>
                                </Panel>
                                <Panel class="top-bottom-flow vertical-center horizontal-center">
                                    <Label class="tournament-journal__info-block__title stratum-font" text="#tournament_coin_team_graffiti"/>
                                    <Label class="tournament-journal__info-block__subtitle" html="true" text="#tournament_coin_select_team_graffiti"/>
                                    <Button id="id-tournament-journal-selectspray-btn" class="tournament-journal-button" >
                                        <Label  id="" text="#tooltip_navbar_switch_teams"/>
                                    </Button>
                                </Panel>
                            </Panel>
                        </Panel>
                        <Panel class="tournament-journal__column short">
                            <Panel class="tournament-journal__info-block short">
                                <Image id="" class="tournament-journal__info-steamtv-icon" src="file://{images}/browser/steamtv.svg" textureheight="28" texturewidth="-1"/>
                                <Panel class="top-bottom-flow vertical-center horizontal-center">
                                    <Label class="tournament-journal__info-block__title stratum-font" text="#tournament_coin_team_flair"/>
                                    <Label class="tournament-journal__info-block__subtitle" html="true" text="#tournament_coin_team_flair_desc"/>
                                    <Button id="id-tournament-journal-watch-stream" class="tournament-journal-button" >
                                        <Label  id="" text="#WatchMenu_Watch"/>
                                    </Button>
                                </Panel>
                            </Panel>
                        </Panel>
                    </Panel>
                </Panel>

                <Panel class="popup-capability__button-row no-border" >
					<Panel class="left-right-flow horizontal-align-right">
                        <TextButton class="PopupButton" text="#Workshop_Preview_FAQ" onactivate="SteamOverlayAPI.OpenURL( 'http://www.counter-strike.net/pickem/katowice2019#faq' );" />
						<TextButton class="PopupButton" text="#GameUI_Close" onactivate="$.DispatchEvent( 'UIPopupButtonClicked', '' )" />
					</Panel>
				</Panel>

			</Panel>
		</Panel>
	</PopupCustomLayout>
</root>

